@*@model IEnumerable<DotNetMvc.Entities.Director>*@
@model List<DirectorModel>

@{
    ViewBag.Title = "Director List";
}

<div class="paddingtop">
    <h2>@ViewBag.Title</h2>

    <p>
        @*@Html.ActionLink("New Director", "Create")*@
        <a href="@Url.Action("Create")"><i class="fa fa-plus"></i> New Director</a>
    </p>

    @if (Model != null && Model.Count > 0)
    {
        <p class="text-secondary">@Model.Count directors found.</p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Surname)
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model.FirstOrDefault().Retired)*@
                    @Html.DisplayNameFor(model => model.FirstOrDefault().RetiredText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().MoviesText)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Retired)*@
                        @Html.DisplayFor(modelItem => item.RetiredText)
                    </td>
                    <td>
                        @Html.Raw(item.MoviesText)
                    </td>
                    <td style="width: 22%; text-align: right;">
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |*@
                        <a href="@Url.Action("Edit", new { id = item.Id })"><i class="fa fa-pencil-square-o"></i> Edit</a> | 

                        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                        <a href="@Url.Action("Details", new { id = item.Id })"><i class="fa fa-info-circle"></i> Details</a> | 

                        @*@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                        <a href="@Url.Action("Delete", new { id = item.Id })"><i class="fa fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <p class="text-danger">No directors found.</p>
    }
</div>